<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrainMaster" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rosa2</item>
        <item name="colorPrimaryVariant">@color/rosa1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rosa3</item>
        <item name="colorSecondaryVariant">@color/rosa4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/rosa2</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@drawable/fondoclasico</item>
        <!-- Fuente -->
        <item name="android:fontFamily">@font/cuprum_bold</item>
    </style>

    <style name="Theme.BrainMasterPunk" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_osc</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_punk</item>
        <item name="colorSecondaryVariant">@color/purple_pnk</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@drawable/fondopunk</item>
        <!-- Fuente -->
        <item name="android:fontFamily">@font/cuprum_bold</item>
    </style>

    <style name="Theme.BrainMasterSummer" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_lad</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/pink_claro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange_lad</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@drawable/fondoverano</item>
        <!-- Fuente -->
        <item name="android:fontFamily">@font/cuprum_bold</item>
    </style>

    <style name="newRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="Theme.BrainMaster.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.BrainMaster.AppWidgetContainer" parent="Theme.BrainMaster.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>